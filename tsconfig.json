{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src/",
    "strict": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist-website",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
